<?xml version="1.0" encoding="UTF-8"?>  
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans 
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
          
    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/><!-- 1、指定数据源 -->
        <property name="configLocation" value="com/purang/mybatis/sql-map-config-mybatis.xml"/> <!-- 2、指定配置文件 -->
    </bean>
    <bean id="abstractDao" abstract="true">
    <property name="sqlSessionFactory" ref="sqlSessionFactory"></property>
    </bean>
    <bean id="userDao" class="com.purang.mybatis.UserMybatisDaoImpl" parent="abstractDao">
    </bean>
 </beans>   